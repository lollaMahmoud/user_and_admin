<Page x:Class="proj.login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:proj"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="login">

    <Grid Background="#FF8EE7FF">
        <Label HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="124" Height="85" Content="login" FontSize="48"/>
        <Label Content="name" HorizontalAlignment="Left" Margin="99,130,0,0" VerticalAlignment="Top" FontSize="22"/>
        <Label Content="password" HorizontalAlignment="Left" Margin="99,196,0,0" VerticalAlignment="Top" FontSize="22"/>
        <TextBox x:Name="namel" HorizontalAlignment="Left" Margin="220,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="243" Height="33" FontSize="20"/>
        <TextBox x:Name="passl" HorizontalAlignment="Left" Margin="220,202,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="243" Height="33" FontSize="20"/>
        <Button HorizontalAlignment="Left" Margin="363,259,0,0" VerticalAlignment="Top" Width="154" Height="43" Content="GO" FontSize="20" Click="Button_Click"/>

    </Grid>
</Page>
